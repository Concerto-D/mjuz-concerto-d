{
  "name": "@mjus/core",
  "version": "0.0.0",
  "description": "Âµs Runtime and Resource Provider",
  "author": "Daniel Sokolowski <github@d.sokolowski.org>",
  "homepage": "https://github.com/allprojects/decentralized-deployments#read",
  "license": "Apache-2.0",
  "directories": {
    "dist": "dist",
    "test": "test"
  },
  "files": [
    "dist/src",
    "resources"
  ],
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/allprojects/decentralized-deployments.git"
  },
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "lint": "eslint . --ext .ts",
    "prepublish": "npm run clean && npm run build",
    "test-unit": "jest --testMatch '**/*.test.ts'",
    "test-unit-exhaustive": "jest --testMatch '**/*.test.ts' --setupTestFrameworkScriptFile='./exhaustive-fast-check.config.ts'",
    "test-integration": "PULUMI_CONFIG_PASSPHRASE= PULUMI_DEBUG_PROMISE_LEAKS=1 jest --runInBand --testMatch '**/*.itest.ts'",
    "test": "PULUMI_CONFIG_PASSPHRASE= PULUMI_DEBUG_PROMISE_LEAKS=1 jest --runInBand"
  },
  "bugs": {
    "url": "https://github.com/allprojects/decentralized-deployments/issues"
  },
  "jest": {
    "testMatch": [
      "**/*[^m]test.ts"
    ],
    "testEnvironment": "node",
    "testTimeout": 60000,
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "collectCoverage": true
  },
  "devDependencies": {
    "@funkia/hareactive": "git://github.com/dsoko2/hareactive#8b1f46f5f6b1bc5846d8ea1a8097b58e4726d985",
    "@funkia/io": "git://github.com/dsoko2/io#0573c2330cfcfdb3df570a2b3a4c2b33ff71b3f3",
    "@grpc/grpc-js": "1.3.0",
    "@pulumi/pulumi": "3.2.1",
    "@types/google-protobuf": "3.15.2",
    "@types/jest": "26.0.23",
    "@types/node": "15.0.2",
    "@types/pino": "6.3.8",
    "@types/yargs": "16.0.1",
    "@typescript-eslint/eslint-plugin": "4.22.1",
    "@typescript-eslint/parser": "4.22.1",
    "eslint": "7.26.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-prettier": "3.4.0",
    "fast-check": "2.14.0",
    "jest": "26.6.3",
    "pino": "6.11.3",
    "prettier": "2.2.1",
    "ts-jest": "26.5.6",
    "ts-mockito": "2.6.1",
    "ts-node": "9.1.1",
    "typescript": "4.2.4"
  },
  "dependencies": {
    "@mjus/grpc-protos": "0.0.0",
    "yargs": "17.0.1"
  },
  "peerDependencies": {
    "@funkia/hareactive": "*",
    "@funkia/io": "*",
    "@grpc/grpc-js": "1.3.0",
    "@pulumi/pulumi": "3.2.1",
    "pino": "6.11.3"
  }
}
