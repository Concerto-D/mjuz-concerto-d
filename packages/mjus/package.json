{
  "name": "@mjus/core",
  "version": "0.0.0",
  "description": "Âµs Runtime and Resource Provider",
  "author": "Daniel Sokolowski <github@d.sokolowski.org>",
  "homepage": "https://github.com/allprojects/decentralized-deployments#read",
  "license": "Apache-2.0",
  "directories": {
    "dist": "dist",
    "test": "test"
  },
  "files": [
    "dist/src"
  ],
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/allprojects/decentralized-deployments.git"
  },
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "lint": "eslint . --ext .ts",
    "prepublish": "npm run clean && npm run build",
    "test-unit": "jest --testMatch '**/*.test.ts'",
    "test-integration": "PULUMI_CONFIG_PASSPHRASE= PULUMI_DEBUG_PROMISE_LEAKS=1 jest --runInBand --testMatch '**/*.itest.ts'",
    "test-integration-manual": "find . -name \\*.mtest.ts -type f -print0 | PULUMI_CONFIG_PASSPHRASE= PULUMI_DEBUG_PROMISE_LEAKS=1 xargs -n 1 -0 ts-node",
    "test": "npm run test-integration-manual && PULUMI_CONFIG_PASSPHRASE= PULUMI_DEBUG_PROMISE_LEAKS=1 jest --runInBand"
  },
  "bugs": {
    "url": "https://github.com/allprojects/decentralized-deployments/issues"
  },
  "jest": {
    "testMatch": [
      "**/*[^m]test.ts"
    ],
    "testEnvironment": "node",
    "testTimeout": 30000,
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "collectCoverage": true
  },
  "devDependencies": {
    "@funkia/hareactive": "0.4.0",
    "@funkia/io": "0.0.5",
    "@pulumi/pulumi": "2.20.0",
    "@types/google-protobuf": "3.7.4",
    "@types/jest": "26.0.20",
    "@types/node": "14.14.28",
    "@types/pino": "6.3.5",
    "@types/yargs": "16.0.0",
    "@typescript-eslint/eslint-plugin": "4.15.1",
    "@typescript-eslint/parser": "4.15.1",
    "eslint": "7.20.0",
    "eslint-config-prettier": "7.2.0",
    "eslint-plugin-prettier": "3.3.1",
    "jest": "26.6.3",
    "pino": "6.11.1",
    "prettier": "2.2.1",
    "ts-jest": "26.5.1",
    "ts-node": "9.1.1",
    "typescript": "4.1.5"
  },
  "dependencies": {
    "@mjus/grpc-protos": "0.0.0",
    "yargs": "16.2.0"
  },
  "peerDependencies": {
    "@funkia/hareactive": "0.4.0",
    "@funkia/io": "0.0.5",
    "@grpc/grpc-js": "1.2.8",
    "@pulumi/pulumi": "2.20.0",
    "pino": "6.11.1"
  }
}
