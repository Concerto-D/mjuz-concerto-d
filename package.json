{
  "name": "root",
  "private": true,
  "scripts": {
    "build": "yarn workspaces foreach -p run build",
    "clean": "yarn workspaces foreach -p run clean",
    "install-protos": "yarn workspace @mjuz/grpc-protos prepublish && rm -r node_modules/@mjuz/grpc-protos && cp -r mjuz-grpc-protos node_modules/@mjuz/grpc-protos",
    "postinstall": "patch-package && yarn install-protos"
  },
  "devDependencies": {
    "patch-package": "^6.4.7",
    "postinstall-postinstall": "^2.1.0"
  },
  "workspaces": [
    "mjuz-core",
    "mjuz-grpc-protos",
    "teastore",
    "webpage"
  ]
}
